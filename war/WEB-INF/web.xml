<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets --><servlet>
  	<servlet-name>registerServlet</servlet-name>
  	<servlet-class>assistantServlet.registerServlet</servlet-class>
</servlet>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>assistantServlet.LoginServlet</servlet-class>
</servlet>
	<servlet>
		<servlet-name>dashboardServlet</servlet-name>
		<servlet-class>assistantServlet.dashboardServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>pomodoroServlet</servlet-name>
		<servlet-class>assistantServlet.pomodoroServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>calendarServlet</servlet-name>
		<servlet-class>assistantServlet.calendarServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>settingsServlet</servlet-name>
		<servlet-class>assistantServlet.settingsServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>tasksServlet</servlet-name>
		<servlet-class>assistantServlet.tasksServlet</servlet-class>
	</servlet>

	<!-- Servlet mappings --><servlet-mapping>
		<servlet-name>registerServlet</servlet-name>
		<url-pattern>/register</url-pattern>
</servlet-mapping>
	<servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
</servlet-mapping>
	<servlet-mapping>
		<servlet-name>dashboardServlet</servlet-name>
		<url-pattern>/dashboard</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>pomodoroServlet</servlet-name>
		<url-pattern>/pomoTimer</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>calendarServlet</servlet-name>
		<url-pattern>/calendar</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>settingsServlet</servlet-name>
		<url-pattern>/settings</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>tasksServlet</servlet-name>
		<url-pattern>/tasks</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
